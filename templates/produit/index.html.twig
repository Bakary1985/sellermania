{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Is Plancher</th>
                <th>Prix Normal</th>
                <th>Prix Plancher</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.name }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.price.IsPlancher == true ? "Yes":"Non" }}</td>
                <td>{{ produit.price.prixNormal }}</td>
                <td>{{ produit.price.prixPlancher }}</td>
                <td><img src="{{ vich_uploader_asset(produit) | imagine_filter('my_thumb_filter_max') }}"
                         alt="{{ produit.name }}" class="w-100 rounded-top"/></td>
                <td>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
