{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
        <article class="pin bg-white rounded shadow">
            <h3>{{ produit.name }}
                <small class="float-right mw-100">{{produit.price.IsPlancher !=true ? produit.price.prixNormal : produit.price.prixPlancher}} â‚¬</small>
